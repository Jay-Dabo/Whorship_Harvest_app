<% @page_title = "Sign In" %>
<div class="header">
<%= render(:partial => 'layouts/navbar')%>
</div>
<div class="main">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="container" style="width:30%;">

		<form class="form-signin">
			<h2 class="form-signin-heading">Please sign in</h2>

			<%= f.email_field :email ,:placeholder=>"Email address", :class => "form-control", :autofocus => true, :style=>"margin-bottom:2%;"%>
			
			<%= f.password_field :password, :class=>"form-control", :placeholder=>"Password" ,:required => true%>
			
				<% if devise_mapping.rememberable? -%>
				<%= f.check_box :remember_me %> Remember me?<br/>
				<% end -%>
			
			
			<%= f.submit "Sign in" , :class=>"btn btn-lg btn-primary btn-block" %>
		</form>
	<% end %>
	<%= render "devise/shared/links" %>
	</div> <!-- /container -->



</div>
<div class="footer">
<%= render(:partial => 'layouts/footer')%>
</div>